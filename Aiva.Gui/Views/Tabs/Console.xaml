<controls:MetroContentControl
    x:Class="Aiva.Gui.Views.Tabs.Console"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:converters="clr-namespace:Aiva.Gui.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:internal="clr-namespace:Aiva.Gui.Internal"
    xmlns:local="clr-namespace:Aiva.Gui.Views.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <controls:MetroContentControl.Resources>
        <converters:BadgeConverter x:Key="badgeConverter" />
    </controls:MetroContentControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer
            Grid.Column="0"
            Height="300"
            Padding="4"
            internal:ScrollViewerExtension.AutoScroll="True"
            BorderBrush="BlanchedAlmond"
            BorderThickness="2"
            HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Message}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Badges}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Margin="5" Source="{Binding ., Converter={StaticResource badgeConverter}}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <Separator />
                            <TextBlock Text="{Binding Username}" />
                            <Separator />
                            <TextBlock Text="{Binding Message}" />
                        </StackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <!--<ItemsControl ItemsSource="{Binding Message}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock TextWrapping="Wrap">
                            <StackPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding Badges}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Margin="5" Source="{Binding ., Converter={StaticResource badgeConverter}}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Separator />
                                <TextBlock Text="{Binding Username}" />
                                <Separator />
                                <TextBlock Text="{Binding Message}" />
                            </StackPanel>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ContextMenu>
                    <ContextMenu Name="MessagesContextMenu">
                        <MenuItem Header="TODO: Copy Message" />
                        <MenuItem Header="TODO: Copy Twitch Username" />
                    </ContextMenu>
                </ItemsControl.ContextMenu>
            </ItemsControl>-->
        </ScrollViewer>
        <ListBox
            Grid.Column="1"
            Height="300"
            ItemsSource="{Binding User}" />
    </Grid>
</controls:MetroContentControl>
